{{ define "base" }}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width user-scalable=no initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">

		{{ block "title" . }} 
	   	{{ end }}

		<!-- bootstrap cdn -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
			  rel="stylesheet" 
			  integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" 
			  crossorigin="anonymous">
		<link rel="icon" href="./static/images/golang.jpg" type="image/icon type">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
		
		<!-- date picker cdn -->
		<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/css/datepicker-bs5.min.css"> -->

		<!-- google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">

		{{ block "css" . }}
		{{ end }}

		<style>
			.nav-wrap {
					border-bottom-style:solid;
					border-bottom-width:1px;
					border-bottom-color:#eee;
			}
			.form-control {
					border: 1px solid #eee;
			}
			.login-btn, .logout-btn {
					text-decoration:none;
			}
		</style>
	</head>
	<body>
		<div class="nav-wrap">

		<nav class="navbar navbar-expand-lg sticky-top py-2 mx-5" style="background-color: #fff;">
			<div class="container-fluid py-3">

				<a class="navbar-brand" href="/">MyQ</a>
				<button class="navbar-toggler" 
						type="button" 
						data-bs-toggle="collapse" 
						data-bs-target="#navbarNavAltMarkup" 
						aria-controls="navbarNavAltMarkup" 
						aria-expanded="false" 
						aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav">
						<a class="nav-link" href="/about">About</a>
						<a class="nav-link" href="/contact">Contact</a>
					</div>
				</div>
				{{ if eq .IsAuth 1 }}
						<a id="logout-btn" class="logout-btn d-flex me-5" href="/user/logout">
							<button class="btn btn-outline-secondary" type="submit">Logout</button>
						</a>
				{{ else }}
						<a id="login-btn" class="login-btn d-flex me-5" href="/user/login">
							<button class="btn btn-outline-primary" type="submit">Login</button>
						</a>
				{{ end }}
			</div>
		</nav>
		</div>

		{{ block "content" . }}
		{{ end }}

		<footer>
		</footer>

		<!-- bootstrap cdn js -->
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" 
				integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" 
				crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" 
				integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" 
				crossorigin="anonymous"></script>

		<!-- datepicker cdn js -->
		<script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/js/datepicker-full.min.js"></script>

		<!-- sweatAlert cdn js -->
		<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

		{{ block "js" . }} 
	   	{{ end }}

	</body>
</html>
{{ end }}
