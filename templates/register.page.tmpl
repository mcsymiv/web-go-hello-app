{{ template "base" . }}

{{ define "title" }}
		<title>Register</title>
{{ end }}

{{ define "css" }}
	<style>
		p {
			font-family: 'Montserrat', sans-serif;
		}
		.form-control::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
            color: #ccc;
            opacity: .7; /* Firefox */
		}
		.small-text {
				font-size: smaller;
		}
		#login-btn {
				visibility:hidden;
		}
	</style>
{{ end }}

{{ define "content" }}
	<div class="container">
			<div class="row mt-4">
					<div class="col-lg-4 col-md-4 col-sm-2 col-xs-1"></div>
					
					<div class="col-lg-4 col-md-4 col-sm-8 col-xs-10">
						<form action="/user/register" method="post">

								<input type="hidden" name="csrf_token" value="{{ .CSRFToken }}">

								<div class="mb-3">
									<label for="exampleInputEmail1" 
											class="form-label">Email address
									</label>
							
									<input type="email" 
										   name="email"
										   class="form-control {{ with .Form.Errors.Get "email" }}is-invalid{{ end}}" 
										   id="exampleInputEmail1" 
										   aria-describedby="emailHelp">

											{{ with .Form.Errors.Get "email" }}
												<div class="text-danger small ms-2">
													{{ . }}
												</div>
											{{ end }}

									<div id="emailHelp" 
										class="form-text">We'll never share your email with anyone else.
									</div>
								  </div>

								  <div class="mb-3">
									<label for="exampleInputPassword1" 
											class="form-label">Password
									</label>

									<input type="password" 
										   name="password"
										   class="form-control {{ with .Form.Errors.Get "password" }}is-invalid{{ end }}" 
										   id="exampleInputPassword1">

											{{ with .Form.Errors.Get "password" }}
												<div class="text-danger small ms-2">
													{{ . }}
												</div>
											{{ end }}
								  </div>

								  <button type="submit" class="btn btn-outline-primary mt-3">Register</button>
						</form>
					</div>

					<div class="col-lg-4 col-md-4 col-sm-2 col-xs-1"></div>
			</div>
	</div>
{{ end }}
