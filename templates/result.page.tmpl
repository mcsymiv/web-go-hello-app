{{ template "base" . }}

{{ define "title" }}
	<title>Search result</title>
{{ end }}

{{ define "css" }}
	<style>
		p {
			font-family: 'Montserrat', sans-serif;
		}
		em {
				color: #ccc;
		}
	</style>
{{ end }}

{{ define "content" }}
		<div class="container">

				{{ $search := index .Data "search" }}

				<div class="row">
						<div class="col">
								<h3 class="mt-3">
										Result for: <em>{{  $search.Query }}</em>
								</h3>
						</div>
				</div>
		</div>
{{ end }}
